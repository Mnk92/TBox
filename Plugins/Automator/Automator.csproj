<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>Mnk.TBox.Plugins.Automator</RootNamespace>
    <AssemblyName>Mnk.TBox.Plugins.Automator</AssemblyName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <UseWPF>true</UseWPF>
    <ImportWindowsDesktopTargets>true</ImportWindowsDesktopTargets>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>..\..\bin\$(Configuration)\Plugins\</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Core\Contracts\Mnk.TBox.Core.Contracts.csproj" />
    <ProjectReference Include="..\..\Core\PluginsShared\Mnk.TBox.Core.PluginsShared.csproj" />
    <ProjectReference Include="..\..\Localization\Mnk.TBox.Locales.Localization.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Mnk.Library.Common" Version="2.0.0" />
    <PackageReference Include="Mnk.Library.ScriptEngine" Version="2.0.0" />
    <PackageReference Include="Mnk.Library.WpfControls" Version="2.0.0" />
    <PackageReference Include="Mnk.Library.WpfSyntaxHighlighter" Version="2.0.0" />
  </ItemGroup>
</Project>